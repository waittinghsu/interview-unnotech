@require 'variables.styl'
@require 'colors.styl'
// svg direction
// ============================================================
degree = { 'up': 0, 'right': 90, 'down': 180, 'left': -90 }

for key, val in degree
    .svg-{key}
        transform: rotate( val deg);

// 常用的ＣＳＳ 修改
// ============================================================
.position-relative {
    position: relative;
}

.position-absolute {
    position: absolute;
}

.cursor-pointer {
    cursor: pointer;
}
// filter dialog 內的按鈕樣式修改
// ============================================================
.v-btn {
    &__svg-filter {
        &.v-btn {
            &--large {
                padding: 0 8px;
            }
        }
    }
}
.v-btn-toggle {
    &__filter {
        display: contents!important;
        .v-btn {
            opacity: 1!important;
            min-width: 130px!important;
        }
        &.theme--light {
            .v-btn {
                color: rgba(0, 0, 0, 0) !important;
            }
        }
    }
}
